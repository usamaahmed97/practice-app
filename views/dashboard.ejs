<%- include("header") -%>
<h1 class="display-4 fw-bold lh-1 mb-3">Dashboard</h1>
<h1>Welcome, <%= globalFirstName%>!</h1>

<section class="py-5 text-center container">
    <form class="form-inline active-purple-3 active-purple-4">
        <i class="fas fa-search" aria-hidden="true"></i>
        <input class="form-control" type="text" placeholder="Search"
          aria-label="Search">
      </form>
</section>
  

<section>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">Description</th>
              <th scope="col">Owner ID</th>
             
            </tr>
          </thead>
          <tbody>
             
            <% for (let i =0; i <=dataSize; i++ ) { %>
            
              <tr>
                <td><%= globalAllRepoIds[i] %></td>
                <td><%= globalAllrepoNames[i] %></td>
                <td><%= globalAllRepoDescriptions[i] %></td>
                <td><%= globalAllUserIds[i] %></td>
                
              </tr>
          
             
              <% } %>
          
           
          </tbody>
        </table>   
  </section>

  <div class="col-lg-12 col-md-8 mx-auto">
    <p>
        <div class="b-example-divider"></div>
        <a href="/deleteUser" class="btn btn-danger my-2">Delete User</a>
        <a href="/editUser" class="btn btn-danger my-2">Edit User</a><br>
        <a href="/createRepository" class="btn btn-primary my-2">Create Repository</a>
        <a href="/yourRepositories" class="btn btn-primary my-2">Your Repositories</a>
    </p>
  </div>
<%- include("footer") -%>

